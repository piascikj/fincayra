<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!--
		========================================================= 
		We want config information for the app in a property file 
		=========================================================
	-->
	<bean class="org.springframework.beans.factory.config.PropertyOverrideConfigurer">
        <property name="locations">
			<list>
				<value>file:/etc/fincayra/*.properties</value>
				<value>file:${user.home}/.fincayra/*.properties</value>
			</list>
        </property>
		<property name="ignoreResourceNotFound" value="true"/>
    </bean>
	
	<!--
		========================================================= 
		The Appliciation bean 
		=========================================================
	-->
	<bean id="application" class="org.innobuilt.fincayra.FincayraApplication">
		<property name="pageDir" value="application" />
		<property name="jsDir" value="fincayra-lib"/>
		<property name="mailManager" ref="mailManager" />
		<property name="persistenceManager" ref="persistenceManager"/>
		<property name="url" value="http://localhost:8080/"/>
		<property name="secureUrl" value="https://localhost:4443/"/>
		<property name="name" value="Fincayra"/>
	</bean>
	
	<!-- The persitence manager uses JBoss modeshape see configRepository.xml in classes for configuration -->
	<bean id="persistenceManager" class="org.innobuilt.fincayra.persistence.PersistenceManager">
	</bean>
	
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.gmail.com" />
		<property name="port" value="587" />
		<property name="username" value="somUser" />
		<property name="password" value="somePassword" />
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
				<prop key="mail.smtp.timeout">25000</prop>
			</props>
		</property>
	</bean>
	<bean id="mailManager" class="org.innobuilt.fincayra.mail.MailManager">
		<property name="mailSender" ref="mailSender" />
		<property name="fromEmail" value="jesse@piascik.net"/>
		<property name="templateDir" value="mail"/>
	</bean>

</beans>
